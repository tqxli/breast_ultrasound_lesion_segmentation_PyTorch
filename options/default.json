{
    "name": "Attn_ResUNet",
    "n_gpu": 1, 

    "arch": {
        "type": "Attention_ResUNet",
        "args": {}
    },
    "data_loader": {
        "type": "BUSIDataLoader",
        "args":{
            "imgs_dir": "BUSI/BUSI_train/images/",
            "masks_dir": "BUSI/BUSI_train/mask_ground_truth/",
            "resize_img": true,
            "validation_split": 0.2, 
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 0,
            "pin_memory": true,
            "do_classification": true,
            "labels_dir": "BUSI/BUSI_train/classes.csv",
            "aux_params": [{"pooling": "max",             
                            "dropout": 0.1,               
                            "activation": "sigmoid",     
                            "classes": 3
                           }]           
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 1e-8,
            "amsgrad": true
        }
    },
    "loss": "DiceBCE_loss",
    "metrics": [
        "avg_iou", "avg_dice_coeff"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "gamma": 0.1,
            "step_size": 10
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/content/drive/MyDrive/exp_results/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "off",
        "early_stop": 20,

        "tensorboard": true
    }
}