{
    "name": "Attn_ResUNet_plus_classification",
    "n_gpu": 1, 

    "arch": {
        "type": "Attention_ResUNet",
        "args": {
            "aux_params": {
                "pooling": "max",             
                "dropout": 0.1,               
                "activation": "softmax",    
                "classes": 3
            }  
        }
    },
    "data_loader": {
        "type": "BUSIDataLoader",
        "args":{
            "imgs_dir": "BUSI/BUSI_train/images/",
            "masks_dir": "BUSI/BUSI_train/mask_ground_truth/",
            "resize_img": true,
            "validation_split": 0.2, 
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 0,
            "pin_memory": true,
            "do_classification": true,
            "labels_dir": "BUSI/BUSI_train/classes.csv"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 1e-8,
            "amsgrad": true
        }
    },
    "loss": "DiceBCE_CE_loss",
    "metrics": [
        "avg_iou", "avg_dice_coeff"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "patience": 3,
            "verbose": true
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "/content/drive/MyDrive/exp_results/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "off",
        "early_stop": 20,

        "tensorboard": false
    }
}